{
    "openapi": "3.0.2",
    "info": {
        "title": "HelloWorldService",
        "version": "1.0.0"
    },
    "paths": {
        "/hello/{name}": {
            "get": {
                "operationId": "Greet",
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "schema": {
                            "type": "string"
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Greet 200 response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/GreetResponseContent"
                                }
                            }
                        }
                    },
                    "480": {
                        "description": "BadInput 480 response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/BadInputResponseContent"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/{name}": {
            "post": {
                "operationId": "Hello",
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "schema": {
                            "type": "string"
                        },
                        "required": true
                    },
                    {
                        "name": "town",
                        "in": "query",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Hello 200 response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/HelloResponseContent"
                                }
                            }
                        }
                    },
                    "480": {
                        "description": "BadInput 480 response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/BadInputResponseContent"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "BadInputResponseContent": {
                "type": "object",
                "properties": {
                    "error": {
                        "type": "string"
                    }
                }
            },
            "GreetResponseContent": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string"
                    }
                }
            },
            "HelloResponseContent": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string"
                    }
                },
                "required": [
                    "message"
                ]
            }
        }
    }
}