{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "runDev",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "dependsOrder": "parallel",
            "dependsOn": [
                "backend",
                "frontend"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "backend",
            "type": "shell",
            "command": "mill -j 0 backend.compile",
            "presentation": {
                "panel": "dedicated",
                "group": "runDevCmd"
            },
            "group": "build"
        },
        {
            "label": "frontend",
            "type": "shell",
            "command": "mill -j 0 frontend.fastLinkJS",
            "presentation": {
                "panel": "dedicated",
                "group": "runDevCmd"
            },
            "group": "build"
        }
    ]
}
